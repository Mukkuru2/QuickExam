mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
            img(src="/images/jojo.jpg", width="36", height="36")
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/") Home
                li.nav-item
                    a.nav-link(href="/exam") Exam
                li.nav-item
                    a.nav-link(href="/create_exam") Create Exam
                li.nav-item
                    a.nav-link(href="/add_question") Add Question
                li.nav-item
                    a.nav-link(href="/show_questions") Show Questions

        .navbar-right
            if user
                ul.navbar-nav.mr-auto
                    li.navbar-text Hello #{user.email}!
                    li.nav-item
                        a.nav-link(href="/logout") Logout
            else
                span.navbar-right
                    a.nav-link(href="/login") Login
