doctype html
html(lang='en')
    include ../common/head.jade
    +head("Emails")
    body
        header
            include ../common/navbar.jade
            +navbar()
            .container
                .row.align-items-center
                    .col-md-9.order-md-1.text-center.text-md-left.pr-md-5
                    h1 Emails
                    table.table
                        thead
                            tr
                                th(scope="col") Email
                                th(scope="col") Actions
                                th(scope="col")
                            tr
                        tbody
                            for email in emails
                                tr(id=email.id)
                                    td
                                        span #{email.email}
                                    td
                                        a(href="/email/" + email.id) Details
                                    td
                                        button(onclick=`deleteEmail('${email.id}')`).btn.btn-primary Delete
    include ../common/footer.jade
    +footer()

    script(src='/javascripts/emails.js')