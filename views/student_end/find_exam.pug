doctype html
html(lang='en')
  include ../common/head
  +head("Some Testing")
  body
    header
      include ../common/navbar
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-9.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Title
            form(action="/start_exam", method="POST")
              .input-group.mb-3
                input(name="exam_code", type="text", placeholder="Enter the code for the quiz you'd like to attempt!"
                style={height: '80px'}).form-control
                .input-group-append
                  button(type="submit").btn.btn-primary Get Started


    include ../common/footer
    +footer()
