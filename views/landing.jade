extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
    input(name="email_submitted", type="email", placeholder="Enter your email adress")
    button(type="submit") Submit

  if emails
    h1 Emails
    for email in emails
      p
        span #{email.email}
        |  
        a(href="/email/" + email.id) Details